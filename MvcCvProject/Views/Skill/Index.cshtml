@using MvcCvProject.Models.Entity
@model List<Skills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string renk = "";
    string labelrenk = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper"">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:10px;">
                            <div class="card-header">
                                <h3 class="card-title"><b>Yetenek Listem</b></h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Oran</th>
                                            <th style="width: 40px">Derece</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        {
                                            if (int.Parse(c.SkillInfo) <= 50 && int.Parse(c.SkillInfo) >= 0)
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelrenk = "badge bg-danger";
                                            }
                                            if (int.Parse(c.SkillInfo) >= 51 && int.Parse(c.SkillInfo) <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelrenk = "badge bg-warning";
                                            }
                                            if (int.Parse(c.SkillInfo) >= 71 && int.Parse(c.SkillInfo) <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelrenk = "badge bg-primary";
                                            }
                                            if (int.Parse(c.SkillInfo) >= 85 && int.Parse(c.SkillInfo) <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@c.ID</td>
                                                <td>@c.Skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @c.SkillInfo%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@c.SkillInfo%</span></td>
                                                <td>
                                                    <a href="/Skill/DeleteSkill/@c.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Skill/UpdateSkill/@c.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Güncelle
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <br />
                                <a href="/Skill/AddSkill" class="btn btn-primary">Yeni yetenek ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>
</body>
</html>